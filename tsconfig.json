{
  "compilerOptions": {
    "target": "ES2020",
    "types": [
      "@emotion/react/types/css-prop"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "layouts/*": [
        "./src/layouts/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "views/*": [
        "./src/views/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "apis/*": [
        "./src/apis/*"
      ],
      "@mui/styled-engine": [
        "./node_modules/@mui/styled-engine-sc"
      ]
    },
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution":"Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}